<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/AngularController/HomeAngular.js"></script>
</head>
<body>
    <div ng-app="HomeApp" ng-controller="HomeController" data-ng-init="GetById(@Convert.ToInt32(Request.QueryString["id"]))">
        <div class="container">
            <div class="row">
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" ng-model="Records.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" ng-model="Records.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Experience:</label>
                    <input type="text" ng-model="Records.Experience" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="button" ng-click="updatedata()" class="btn btn-primary" value="{{btntext}}" />
                </div>
            </div>
        </div>
    </div>

</body>
</html>